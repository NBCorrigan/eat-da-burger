<h1>Eat Da Burger, Eat it Now!</h1>

<h2>Burgers Available to Eat:</h2>

<ul>
    {{#each burgers}} {{#unless this.devoured}}
    <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Eat Me!</button>
        </form>

    </li>
    {{/unless}} {{/each}}
</ul>
<h2>Burgers That Have Been Devoured: </h2>

<ul>
    {{#each burgers}} {{#if this.devoured}}
    <li>
        {{this.burger_name}}
    </li>
    {{/if}} {{/each}}
</ul>


<h2>Add a Burger: </h2>


<form class="create-update-form" action="/" method="POST">
    <div class="form-group">
        <lable for="dab">Burger Name:</lable>
        <input type="text" id="dab" name="burger_name">
    </div>
    <button type="submit">Add Burger</button>
</form>
